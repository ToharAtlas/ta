<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@color/cream6">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop"
        android:background="@color/cream6"
        android:outlineSpotShadowColor="@color/cream2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/icon_wifi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="נראה שאין חיבור לאינטרנט "
                android:textColor="@color/cream2"
                android:fontFamily="@font/suez_one"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:text="יש לבדוק את הגדרות הרשת "
                android:textColor="@color/cream5"
                android:fontFamily="@font/suez_one"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>